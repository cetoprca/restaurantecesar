<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree -->
    <record id="view_producto_tree" model="ir.ui.view">
        <field name="name">producto.tree</field>
        <field name="model">restaurante.producto</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="precio"/>
                <field name="categoria"/>
                <field name="cantidad_ingredientes"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_producto_form" model="ir.ui.view">
        <field name="name">producto.form</field>
        <field name="model">restaurante.producto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="precio"/>
                        <field name="categoria"/>
                        <field name="ingrediente_ids" widget="many2many_tags"/>
                        <field name="imagen" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban -->
    <record id="view_producto_kanban" model="ir.ui.view">
        <field name="name">producto.kanban</field>
        <field name="model">restaurante.producto</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="imagen"/>
                <templates>

                    <t t-name="kanban-box">
                        <!-- Caja card -->
                        <div class="oe_kanban_global_click card">
                            <!-- Foto --><!-- Bootstrap!!!!! -->
                            <img class="img-fluid" t-att-src="kanban_image('restaurante.producto','imagen', record.id.raw_value, 'medium')" />

                            <!-- Cuerpo de la card --><!-- Bootstrap!!!!! -->
                            <div class="card-body">
                                <strong><field name="nombre"/></strong><!-- Bootstrap!!!!! -->
                                <p>Precio: <field name="precio"/> â‚¬</p><!-- Bootstrap!!!!! -->
                                <p>Categoria: <field name="categoria"/></p><!-- Bootstrap!!!!! -->
                            </div>
                            
                        </div>

                    </t>

                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_productos" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">restaurante.producto</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
