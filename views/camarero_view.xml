<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree -->
    <record id="view_camarero_tree" model="ir.ui.view">
        <field name="name">camarero.tree</field>
        <field name="model">restaurante.camarero</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="numero_empleado"/>
                <field name="pedido_ids"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_camarero_form" model="ir.ui.view">
        <field name="name">camarero.form</field>
        <field name="model">restaurante.camarero</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="numero_empleado"/>
                        <field name="pedido_ids"/>
                        <field name="foto" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban -->
    <record id="view_camarero_kanban" model="ir.ui.view">
        <field name="name">camarero.kanban</field>
        <field name="model">restaurante.camarero</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="foto"/>
                <templates>

                    <t t-name="kanban-box">
                        <!-- Card -->
                        <div class="oe_kanban_global_click card">
                            <!-- Foto del camarero --><!-- Bootstrap!!!!! -->
                            <img class="img-fluid" t-att-src="kanban_image('restaurante.camarero','foto', record.id.raw_value, 'medium')" />

                            <!-- Cuerpo de la card --><!-- Bootstrap!!!!! -->
                            <div class="card-body">
                                <strong><field name="nombre"/></strong>
                                <p class="text-primary">NÂº Empleado: <field name="numero_empleado"/></p>


                                <!-- Bootstrap!!!!! -->
                                <button name="despedir" type="object" class="btn btn-danger btn-sm mt-2">
                                    Despedir
                                </button>
                                
                            </div>
                        </div>

                    </t>

                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_camareros" model="ir.actions.act_window">
        <field name="name">Camareros</field>
        <field name="res_model">restaurante.camarero</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
