<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree -->
    <record id="view_pedido_tree" model="ir.ui.view">
        <field name="name">pedido.tree</field>
        <field name="model">restaurante.pedido</field>
        <field name="arch" type="xml">
            <tree>
                <field name="cliente_id"/>
                <field name="mesa_id"/>
                <field name="camarero_id"/>
                <field name="total"/>
                <field name="estado"/>
                <field name="fecha_pedido"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_pedido_form" model="ir.ui.view">
        <field name="name">pedido.form</field>
        <field name="model">restaurante.pedido</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="cliente_id"/>
                        <field name="mesa_id"/>
                        <field name="camarero_id"/>
                        <field name="estado"/>
                        <field name="fecha_pedido"/>
                    </group>
                    <notebook>
                        <page string="LÃ­neas de Pedido">
                            <field name="linea_ids">
                                <tree editable="bottom">
                                    <field name="producto_id"/>
                                    <field name="cantidad"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pedidos" model="ir.actions.act_window">
        <field name="name">Pedidos</field>
        <field name="res_model">restaurante.pedido</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
